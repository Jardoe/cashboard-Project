<h1>Edit this transaction:</h1>


<form class="" action="/transactions/<%=@transaction.id%>" method="post">
  <label>Date:</label>
    <input type="date" name="dt" required>

  <label for="category-select"> Select Category: </label>
  <select name="category_id" id="category_select" selected="<=% @transaction.category_id %>">
    <% for category in @categories %>
      <% if category.id == @transaction.category_id %>
        <option value=<%= category.id %> selected><%=category.type%></option>
      <% else %>
        <option value=<%= category.id%>> <%=category.type%> </option>
        <% end %>
    <% end %>
  </select>

  <label for="merchant-select">  Select Merchant:  </label>
    <select name="merchant_id" id="merchant_select" selected="<%= @transaction.merchant_id %>">
      <% @merchants.each do |merchant| %>
        <% if merchant.id == @transaction.merchant_id %>
          <option value=<%= merchant.id %> selected><%=merchant.name%></option>
        <% else %>
          <option value=<%= merchant.id%>><%= merchant.name%></option>
        <% end %>
      <% end %>
    </select>

  <label for="amount">Amount: </label>
  <input type="number" name="amount" step="any" value="<%= @transaction.amount %>"/>

  <input type="submit" value="Edit transaction">

</form>
