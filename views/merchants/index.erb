<h1>Merchants</h1>


<p> <a href="/merchants/new">Add a new Merchant</a> </p>
<br>


  <table class="table">
    <tr>
      <th>Merchant name</th>
      <th></th>
      <th>Total spent</th>
    </tr>
    <% for merchant in @merchants %>
    <tr>
      <td><a href="/merchants/<%= merchant.id %>"><%= merchant.name %></a></td>
      <td>|</td>
      <td><%= merchant.total %></td>
    </tr>
    <% end %>
  </table>
